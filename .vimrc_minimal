syntax on

colorscheme retrobox

set number
set relativenumber

set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4

set autoindent
set smartindent

set colorcolumn=80
set autoread
set scrolloff=3
set cursorline

set list
set listchars=trail:.,tab:.\ 

autocmd BufEnter * if &filetype == "go" | setlocal noexpandtab
