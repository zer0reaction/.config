set nu
set rnu

set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set smartindent

set wrap
set linebreak

set noswapfile
set nobackup
set undofile

let undopath = $HOME . "/.vim/undodir"
set undodir=undopath

set nohlsearch
set incsearch

set termguicolors
set colorcolumn=120
set signcolumn=yes

set scrolloff=5
set updatetime=50
set showcmd
set autoread

let mapleader=" "

nnoremap <leader>e :Ex<Enter>
nnoremap <C-j> :tabp<Enter>
nnoremap <C-k> :tabn<Enter>
nnoremap <C-t> :tabnew<Enter>
inoremap <C-c> <Esc>

syntax enable
colorscheme habamax
